<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.aaliyakhan.locationservices.BookRawMaterials">
    <TextView
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place:"
        android:textSize="@dimen/textsize"
        android:textStyle="bold"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rawmaterialplace"
        ></Spinner>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="RawMaterial 1:"
            android:textSize="@dimen/textsize"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="number"
            android:id="@+id/raw1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="RawMaterial 2:"
            android:textSize="@dimen/textsize"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="number"
            android:id="@+id/raw2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="RawMaterial 3:"
            android:textSize="@dimen/textsize"/>
        <EditText
            android:layout_width="300dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/raw3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="RawMaterial 4:"
            android:textSize="@dimen/textsize"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="number"
            android:id="@+id/raw4"
            />
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Book Raw Materials"
        android:background="@drawable/corner_button"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/bookraw"
        />
</LinearLayout>
